<Project Sdk="Dalamud.NET.Sdk/13.0.0">

    <PropertyGroup>
        <Version>0.0.0.1</Version>
        <Description>NoPolice</Description>

        <PackageProjectUrl>https://github.com/goatcorp/PFLogs</PackageProjectUrl>
        <PackageLicenseExpression>AGPL-3.0-or-later</PackageLicenseExpression>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Debug'">
        <DefineConstants>DEBUG;TRACE</DefineConstants>
        <Optimize>false</Optimize>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Release'">
        <DefineConstants>TRACE</DefineConstants>
        <Optimize>true</Optimize>
    </PropertyGroup>

    <ItemGroup>
      <Content Include="NoPolice\NoPolice.json" />
      <Content Include="NoPolice\packages.lock.json" />
      <Content Include="repo.json" />
    </ItemGroup>

    <ItemGroup>
        <None Update="images\icon.png">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Update="DalamudPackager" Version="13.1.0" />
      <PackageReference Include="XivCommon" Version="9.0.0" />
    </ItemGroup>

</Project>
